<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/playlist_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_default_song_image"
        android:background="@color/ic_launcher_background"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/playlist_item_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/playlist_item_image"
        android:textSize="16sp"
        android:text="Song"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/playlist_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/playlist_item_image"
        android:layout_below="@id/playlist_item_song"
        android:textSize="14sp"
        android:text="Artist"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/playlist_item_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="0:00"/>


</RelativeLayout>